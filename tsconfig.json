{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "src/types/**/*"],
    "exclude": ["node_modules"]
  }
  